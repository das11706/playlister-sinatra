<h1>Update Song</h1>

<h2>Edits for: <%=@song.name%></h2>

  <form action="/songs/<%=@song.slug%>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    
    <label>Edit the Artist:</label>
    <br>
    <input type="text" name="artist[name]" value="<%=@song.artist.name%>" id="artist_name" placeholder="Artist Name">

    <br><br>
    

      <input type="submit" value="Save">
      
</form>


