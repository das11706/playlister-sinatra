<h1>Create a new Song</h1>

<form action="/songs" method="POST">
  <label>Song Name:</label>
  <br>

  <input type="text" name="song[name]" id="song_name">

  <br>
  <p>Select an existing artist or create a new one below.</p>

  <h3>Existing Artists</h3>
    <% @artists.each do |artist| %>
       <input type="radio" name="song[artist_id]" id="<%= artist.id %>" value="<%= artist.id %>"><%= artist.name %><br>
    <% end %>
    <br>

    <h3>New Artist</h3>
      <label>Artist Name: </label>
      <br>
        <input type="text" name="artist[name]" id="artist_name"></input>
        <br><br>

      <input type="submit" value="Create Artist">
</form>