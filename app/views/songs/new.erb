<h1>Create a new Song</h1>

<form action="/songs" method="POST">
  <label for="song_name">Name</label>
  <br>

  <input type="text" name="song[name]" id="song_name">

  <br><br>
  
      <label for="artist_name">Artist Name</label>
      <br>
        <input type="text" name="artist[name]" id="artist_name"></input>
        <br><br>

     <h3>Select a Genre</h3>
     <% Genre.all.each do |genre| %>
      <input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%= genre.id %>"><%= genre.name %></input><br>
    <% end %>
    <br>

   

    <input type="submit" value="Create">
    
</form>





